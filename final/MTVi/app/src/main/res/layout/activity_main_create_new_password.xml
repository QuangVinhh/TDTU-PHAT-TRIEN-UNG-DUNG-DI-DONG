<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".main.MainActivityCreateNewPassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="top"
        android:fontFamily="sans-serif-black"
        android:text="MTVi"
        android:textColor="#EA2027"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher_07_foreground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Create new password"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#636E72"/>

    <EditText
        android:id="@+id/main_create_newPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:background="@drawable/shape_button_edit"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter your new password"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/main_create_confirmPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:drawableStart="@drawable/baseline_shield_24"
        android:drawablePadding="10dp"
        android:background="@drawable/shape_button_edit"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Confirm your new password"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/main_create_showPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Show password"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#636E72"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_create_submit"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_button_sign_in"
        android:text="SUBMIT"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFF"/>
</LinearLayout>