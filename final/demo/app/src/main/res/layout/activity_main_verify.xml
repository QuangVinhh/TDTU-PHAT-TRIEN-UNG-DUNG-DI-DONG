<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="top"
        android:fontFamily="sans-serif-black"
        android:text="MTVi"
        android:textColor="#EA2027"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher_08_foreground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="The code will be sent to your email address."
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#636E72"/>

    <EditText
        android:id="@+id/editText_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/shape_edit_text"
        android:ems="10"
        android:hint="Enter your code number"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_resendCode"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_button_resend_code"
        android:enabled="false"
        android:text="RESEND CODE"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/textView_timeCountdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="00:30"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_verify"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_button_sign_in"
        android:text="VERIFY"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFF"/>
</LinearLayout>