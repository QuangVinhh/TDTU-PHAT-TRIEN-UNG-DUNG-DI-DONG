<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#2F3640"
    android:orientation="vertical"
    tools:context=".user.MainActivityHome">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Service Details"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/shape_edit_text"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Basic"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#2F3640"/>

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button_sign_up"
                android:textOn="CURRENT"
                android:textOff="CHOOSE"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFF"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="50.000 VND / month"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#636E72"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good video quality in HD (720p). Watch on any phone, tablet, computer or TV."
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#636E72"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/shape_edit_text"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Standard"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#2F3640"/>

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button_sign_up"
                android:textOn="CURRENT"
                android:textOff="CHOOSE"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFF"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="200.000 VND / month"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#636E72"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great video quality in Full HD (1080p). Watch on any phone, tablet, computer or TV."
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#636E72"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_edit_text"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Premium"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#2F3640"/>

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button_sign_up"
                android:textOn="CURRENT"
                android:textOff="CHOOSE"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFF"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="250.000 VND / month"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#636E72"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our best video quality in Ultra HD (4K) and HDR. Watch on any phone, tablet, computer or TV."
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#636E72"/>

    </LinearLayout>
</LinearLayout>